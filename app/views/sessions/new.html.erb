<%= render 'shared/login_navbar' %>

<style type="text/css">
  body{
    background-image: url("Puzzlit_logo.jpg");
  }

  h1{
    text-align:center
  }
</style>


<div class="container">

<div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
  <h1 class="well">Puzzlit</h1>
  <%= form_for :login, url: login_path, html: {class: "well"} do |f| %> 
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Log in', class: "btn btn-success btn-block"  %>
    </div>
    <%= link_to "Don't have an Account?  Sign up", signup_path, class: "btn btn-primary btn-block"  %>
  </div>
  <% end %>
</div>