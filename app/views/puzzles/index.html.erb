<% if logged_in? %>
	<!-- Show NavBar -->
	<%= render 'shared/navbar' %>
	<div class="container">
		<!-- Sets bootstrap layout for this div to row -->
	    <div class="row">
	<ul>
	<% @puzzles.each do |p| %>
		<div class="col-md-4">
			<li >
			<%= image_tag p.image_url(:thumb) %>
			<%= p.title %>
			<%= link_to "Click to solve", puzzle_path(p)%>
			</li>
		</div>
		<br>
	<% end %>
</ul>

<% else %>
			<h1>You are not logged in.  Please log in to access this page.</h1>
		    <%= link_to 'Log In', login_path %>
	</div>
<% end %>